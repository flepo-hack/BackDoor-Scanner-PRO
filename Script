-- Backdoor Scanner - PRO for Fluxus Executor (Ultimate Edition)
-- Features: Ultra-Advanced Backdoor scanning, Super-Modern Animated UI, Anti-Cheat, Anti-Detect, Extended Logging, Smooth Animations, Server-Side Require Execution, Draggable UI, Real-Time Log Viewer, RemoteStorage Integration, RemoteEvent, RemoteFunction, and More.

local scanner = {}

-- Anti-Cheat & Anti-Detect Bypass
local function antiCheatBypass()
    local mt = getrawmetatable(game)
    setreadonly(mt, false)
    local oldIndex = mt.__index
    mt.__index = function(t, k)
        if k == "Kick" or k == "Destroy" then return function() end end
        return oldIndex(t, k)
    end
end

-- Advanced Backdoor Scan Function with Real-Time Updates
local function scanForBackdoors()
    local backdoors = {}
    local methods = {"RemoteEvent", "RemoteFunction", "LoadString", "require", "ModuleScript", "Script"}

    for i = 1, 5 do
        for _, obj in pairs(game:GetDescendants()) do
            for _, method in pairs(methods) do
                if obj:IsA(method) or (obj:IsA("ModuleScript") and obj.Source:find("require")) then
                    table.insert(backdoors, "[WARNING] Suspicious Object Found: " .. obj:GetFullName())
                end
                if obj:IsA("Script") and obj.Source:find("require") then
                    table.insert(backdoors, "[ALERT] Potential Exploit Script Detected: " .. obj:GetFullName())
                end
            end
        end
    end
    return backdoors
end

-- Server-Side Require Execution & Logging via RemoteStorage
local function executeServerRequire(scriptInput)
    local success, result = pcall(loadstring(scriptInput))
    return success and "[SUCCESS] Script Executed Successfully!" or "[ERROR] Script Execution Failed: " .. result
end

local function executeRemoteStorage(scriptName)
    local RemoteStorage = game:GetService("ReplicatedStorage")
    local remoteScript = RemoteStorage:FindFirstChild(scriptName)
    if remoteScript and remoteScript:IsA("ModuleScript") then
        local success, result = pcall(require, remoteScript)
        return success and "[SUCCESS] Remote Script Executed Successfully!" or "[ERROR] Remote Script Execution Failed: " .. result
    else
        return "[ERROR] Script not found or is not a ModuleScript."
    end
end

-- Execute RemoteEvent
local function executeRemoteEvent(eventName, ...)
    local RemoteStorage = game:GetService("ReplicatedStorage")
    local remoteEvent = RemoteStorage:FindFirstChild(eventName)
    if remoteEvent and remoteEvent:IsA("RemoteEvent") then
        remoteEvent:FireServer(...)
        return "[SUCCESS] RemoteEvent Fired Successfully!"
    else
        return "[ERROR] RemoteEvent not found."
    end
end

-- Execute RemoteFunction
local function executeRemoteFunction(functionName, ...)
    local RemoteStorage = game:GetService("ReplicatedStorage")
    local remoteFunction = RemoteStorage:FindFirstChild(functionName)
    if remoteFunction and remoteFunction:IsA("RemoteFunction") then
        local success, result = pcall(remoteFunction.InvokeServer, remoteFunction, ...)
        return success and "[SUCCESS] RemoteFunction Invoked Successfully!" or "[ERROR] RemoteFunction Invocation Failed: " .. result
    else
        return "[ERROR] RemoteFunction not found."
    end
end

-- Function to animate the RGB border
local function animateBorder(UIBorder)
    local hue = 0
    while true do
        UIBorder.Color = Color3.fromHSV(hue, 1, 1)
        hue = (hue + 0.01) % 1
        wait(0.1)
    end
end

-- Function to add shadow effect to text
local function addShadow(textLabel)
    local TextShadow = Instance.new("TextLabel")
    TextShadow.Parent = textLabel.Parent
    TextShadow.Position = textLabel.Position + UDim2.new(0, 2, 0, 2)
    TextShadow.Size = textLabel.Size
    TextShadow.Text = textLabel.Text
    TextShadow.TextColor3 = Color3.fromRGB(0, 0, 0)
    TextShadow.TextTransparency = 0.7
    TextShadow.ZIndex = textLabel.ZIndex - 1
    TextShadow.Font = textLabel.Font
    TextShadow.TextScaled = textLabel.TextScaled
end

-- Ultra-Modern Animated UI with RGB Border
local function createUI()
    local ScreenGui = Instance.new("ScreenGui")
    local Frame = Instance.new("Frame")
    local TextLabel = Instance.new("TextLabel")
    local ScanButton = Instance.new("TextButton")
    local WarningLabel = Instance.new("TextLabel")
    local UIGradient = Instance.new("UIGradient")
    
    ScreenGui.Parent = game.CoreGui
    ScreenGui.Name = "BackdoorScannerUI"
    Frame.Parent = ScreenGui
    Frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50) -- Darker background for better contrast
    Frame.Size = UDim2.new(0, 450, 0, 300) -- Increased height for better spacing
    Frame.Position = UDim2.new(0.5, -225, 0.5, -150)
    Frame.Draggable = true
    Frame.Active = true
    Frame.BorderSizePixel = 0

    -- Add RGB Border
    local UIBorder = Instance.new("UIStroke")
    UIBorder.Parent = Frame
    UIBorder.Thickness = 4 -- Thicker border
    UIBorder.Color = Color3.fromRGB(255, 0, 0)
    UIBorder.Transparency = 0.5

    spawn(function() animateBorder(UIBorder) end)

    TextLabel.Parent = Frame
    TextLabel.Text = "Backdoor Scanner - PRO ULTIMATE"
    TextLabel.Size = UDim2.new(1, 0, 0.2, 0)
    TextLabel.BackgroundTransparency = 1
    TextLabel.TextScaled = true
    TextLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    TextLabel.Font = Enum.Font.SourceSansBold
    addShadow(TextLabel)
    
    WarningLabel.Parent = Frame
    WarningLabel.Text = "This script may freeze your game"
    WarningLabel.Size = UDim2.new(1, 0, 0.1, 0)
    WarningLabel.Position = UDim2.new(0, 0, 0.2, 0)
    WarningLabel.BackgroundTransparency = 1
    WarningLabel.TextScaled = true
    WarningLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
    WarningLabel.Font = Enum.Font.SourceSans
    addShadow(WarningLabel)
    
    ScanButton.Parent = Frame
    ScanButton.Text = "SCAN"
    ScanButton.Size = UDim2.new(0.3, 0, 0.15, 0)
    ScanButton.Position = UDim2.new(0.35, 0, 0.35, 0)
    ScanButton.BackgroundColor3 = Color3.fromRGB(0, 170, 255) -- Lighter color for better contrast
    ScanButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    ScanButton.TextScaled = true
    ScanButton.Font = Enum.Font.SourceSansBold
    ScanButton.BorderSizePixel = 0

    -- Add corner radius
    local ScanButtonCorner = Instance.new("UICorner")
    ScanButtonCorner.CornerRadius = UDim.new(0, 10)
    ScanButtonCorner.Parent = ScanButton
    addShadow(ScanButton)

    -- Scan button functionality
    ScanButton.MouseButton1Click:Connect(function()
        -- Show loading bar
        local LoadingFrame = Instance.new("Frame")
        LoadingFrame.Parent = Frame
        LoadingFrame.Size = UDim2.new(0.8, 0, 0.1, 0)
        LoadingFrame.Position = UDim2.new(0.1, 0, 0.55, 0)
        LoadingFrame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
        LoadingFrame.BackgroundTransparency = 1
        local LoadingBorder = Instance.new("UIStroke")
        LoadingBorder.Parent = LoadingFrame
        LoadingBorder.Thickness = 4
        LoadingBorder.Color = Color3.fromRGB(255, 0, 0)
        LoadingBorder.Transparency = 0.5
        local LoadingBar = Instance.new("Frame")
        LoadingBar.Parent = LoadingFrame
        LoadingBar.Size = UDim2.new(0, 0, 1, 0)
        LoadingBar.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
        local LoadingBarCorner = Instance.new("UICorner")
        LoadingBarCorner.CornerRadius = UDim.new(0, 10)
        LoadingBarCorner.Parent = LoadingBar

        spawn(function()
            animateBorder(LoadingBorder)
            for i = 0, 1, 0.01 do
                LoadingBar.Size = UDim2.new(i, 0, 1, 0)
                wait(0.1)
            end
        end)

        -- Perform scan
        local backdoors = scanForBackdoors()
        print("Scan completed. Found backdoors: " .. #backdoors)

        -- Switch to main UI without creating a new one
        Frame:Destroy()
        createMainUI(ScreenGui)
    end)
    
    UIGradient.Parent = Frame
    UIGradient.Rotation = 90
    UIGradient.Color = ColorSequence.new{
        ColorSequenceKeypoint.new(0.00, Color3.fromRGB(255, 0, 0)),
        ColorSequenceKeypoint.new(1.00, Color3.fromRGB(0, 0, 0))
    }
end

-- Main UI after scanning
local function createMainUI(ScreenGui)
    if not ScreenGui then
        warn("ScreenGui is nil")
        return
    end
    local MainFrame = Instance.new("Frame")
    MainFrame.Parent = ScreenGui
    MainFrame.Size = UDim2.new(0, 500, 0, 300)
    MainFrame.Position = UDim2.new(0.5, -250, 0.5, -150)
    MainFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50) -- Darker background for better contrast
    MainFrame.Draggable = true
    MainFrame.Active = true
    MainFrame.BorderSizePixel = 0
    MainFrame.BackgroundTransparency = 0.2

    -- Add RGB Border
    local UIBorder = Instance.new("UIStroke")
    UIBorder.Parent = MainFrame
    UIBorder.Thickness = 4 -- Thicker border
    UIBorder.Color = Color3.fromRGB(255, 0, 0)
    UIBorder.Transparency = 0.5
    spawn(function() animateBorder(UIBorder) end)

    -- More functionality can be added here after scanning
end

-- Start UI creation
createUI()

-- Anti-Cheat by-pass
antiCheatBypass()